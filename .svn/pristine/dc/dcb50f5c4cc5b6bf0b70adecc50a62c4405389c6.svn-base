            switch (InsultSelcetor)
            {
                case 1:
                    await ctx.RespondAsync($"Your mother is a hamster and your father smells like elderbarries");
                    break;
                case 2:
                    await ctx.RespondAsync($"You can't bing because you can't bong");
                    break;
                case 3:
                    await ctx.RespondAsync($"Your mom is small brain bing bong!");
                    break;
                case 4:
                    await ctx.RespondAsync($"You think you enderman? Well you smell like enderman hehe!");
