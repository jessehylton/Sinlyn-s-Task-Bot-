using System;
using System.Collections.Generic;
using System.Text;
using System.Threading.Tasks;
using DSharpPlus;
using DSharpPlus.CommandsNext;
using DSharpPlus.CommandsNext.Attributes;
using DSharpPlus.Entities;

namespace BotApp.Commands
{
    public class Greet
    {
        [Command("hi")]
        public async Task Hi(CommandContext ctx)
        {
            var rndgreet = new Random();
            int greeting = rndgreet.Next(1, 6);

            switch (greeting)
            {
                case 1:
                    await ctx.RespondAsync($"👋 Hi, {ctx.User.Mention} you're super beautiful!");
                    break;
                case 2:
                    await ctx.RespondAsync($"{ctx.User.Mention} Did you do something to your hair today? You look wonderful");
                    break;
                case 3:
                    await ctx.RespondAsync($"Hello {ctx.User.Mention}! Glad you have came by");
                    break;
                case 4:
                    await ctx.RespondAsync($":Blush:");
                    break;
                case 5:
                    await ctx.RespondAsync($"Aww! hehe!");
                    break;
            }



        }
    }
}
